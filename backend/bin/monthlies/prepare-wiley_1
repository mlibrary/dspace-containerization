    $data =~ s,\&ordm\;,\&\#186\;,gs;
    $data =~ s,\&raquo\;,\&\#187\;,gs;
    $data =~ s,\&frac14\;,\&\#188\;,gs;
    $data =~ s,\&frac12\;,\&\#189\;,gs;
    $data =~ s,\&frac34\;,\&\#190\;,gs;
