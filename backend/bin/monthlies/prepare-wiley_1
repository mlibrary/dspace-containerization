    close OUTFILE;
  }

#Not used
sub PutDCDataNew
  {

    my ( $id, $dcData ) = @_;

    my $dir_id = &GetIndexDir ( $id );
    my $fileName = qq{$gCollDir/item_$dir_id/dublin_core.xml};

    use open ':encoding(utf-8)'; 

    open(my $FH, ">", "$fileName")
      or die $!;
    
