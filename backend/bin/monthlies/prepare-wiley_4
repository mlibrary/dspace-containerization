# ----------------------------------------------------------------------
#               start of MAIN
# ----------------------------------------------------------------------

use DBI;
use File::Path;
use Encode;


my $prevMonth = &prev_month_string();

my $gSource = qq{/mnt/prep/wiley/PeriodicUpdateScripts/data/NewAfterEmbargoFix$prevMonth\-open};
my $msg = qq{fixing characters in $Source\n};
pring $msg;

&FixMeta();

exit;

################################################################################################

sub prev_month_string {
    my @months = qw(Jan Feb Mar Apr May Jun Jul Aug Sep Oct Nov Dec);
    my ($sec,$min,$hour,$mday,$mon,$year) = localtime();

    # Find previous month
    $mon--;
    if ($mon < 0) {
        $mon = 11;    # December
        $year--;      # Previous year
    }
    $year += 1900;        # Adjust year
    my $yy = $year % 100; # Last two digits

    return $months[$mon] . sprintf("%02d", $yy);
}



sub FixMeta
  {

    opendir FH, $gSource;
    #avoid files with . and ..
    my @testtems = grep !/^\.\.?$/, readdir FH;
    closedir FH;

    my @allitems;
    foreach my $itemname (@testtems)
    {
        my $item = qq{$gSource/$itemname};
        push (@allitems, $item);
    }

    my $FileCount = 1;
    #Get a complete list of all directories.
    my @listOfDirs;
    foreach my $itemname (@allitems)
    {
        $itemname .= qq{/dublin_core.xml};
        open  (FH, "<$itemname");
        if ( not -d FH)
        {
          if ($itemname =~ m,.*dublin_core.xml, )
            {
	            print $itemname . "\n";
	            my $data = &ReadFile ( $itemname );
              #$data =~ s,â.*?[a-zA-Z0-9],-,gs;
              my $ustring = decode( 'UTF-8', $data );
              $ustring =~ s,â,-,gs;
              &WriteFile ( $itemname, $ustring );
            }

        }
        else  #it must be a directory
        {
            my $a =2;
        }
        close(FH);

     }

    my $a = 2;
  }

sub ReadFile
{
    my ( $fileName ) = @_;

    open FH, "<$fileName";
    binmode FH;
    my ($bytesRead, $buffer, $chunk);
    while ( $bytesRead = read(FH, $chunk, 1024) ) 
    {
        $buffer .= $chunk;
    }
    close FH;
    
    return $buffer;
}

sub WriteFile 
  {
    my ( $filename, $report ) = @_;

    #Now you want to create the file
    open ( OUTFILE, ">$filename" ) || die();
    print OUTFILE $report;
    close OUTFILE;
  }


__END__;



